# --- Dispatcharr Connection ---
DISPATCHARR_URL=http://192.168.1.100:9191
DISPATCHARR_USER=admin
DISPATCHARR_PASS=yourpassword

# --- Dispatcharr Channel Settings ---
# Group name to create/use in Dispatcharr for all ScoreStream channels
DISPATCHARR_GROUP=ScoreStream

# Starting channel number (channels will be assigned sequentially)
DISPATCHARR_CHANNEL_START=900

# --- Stream Settings ---
# The URL Dispatcharr will use to reach THIS server's HLS streams
# Must be reachable FROM your Dispatcharr container (use server LAN IP, not localhost)
STREAM_BASE_URL=http://192.168.1.100:8888

# Video resolution and framerate for the stream
STREAM_WIDTH=1920
STREAM_HEIGHT=1080
STREAM_FPS=30

# HLS segment settings (lower duration = lower latency, higher = more stable)
HLS_SEGMENT_DURATION=2
HLS_PLAYLIST_SIZE=10

# --- ScoreStream Web Port (internal nginx) ---
WEB_PORT=8888

# --- Timezone ---
TZ=America/Chicago
